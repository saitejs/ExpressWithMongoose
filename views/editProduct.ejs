<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <form action="/products/<%=product.id%>?_method=PUT" method ="POST">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Name</label>
          <input type="text" name="name" value="<%=product.name%>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text"></div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Price</label>
          <input type="text" value ="<%=product.price%>" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="mb-3">
            <select class="form-select"  name= "category"aria-label="Default select example">

                <%for(let category of categories){%>
                    <option value="<%=category%>" <%=product.category ===category? 'selected': ''%> ><%=category%></option>
                <%}%>
                <!-- <option selected>Open this select menu</option>
                <option value="fruit" <%=product.category ==='fruit'? 'selected': ''%>>fruit</option>
                <option value="vegetable" <%=product.category ==='vegetable'? 'selected': ''%>>vegetable</option>
                <option value="dairy" <%=product.category ==='dairy'? 'selected': ''%>>dairy</option> -->
              </select>
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>